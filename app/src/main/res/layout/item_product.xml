<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clItemProduct"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvProductAmount"
        app:layout_constraintEnd_toStartOf="@+id/ivMinusOneProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProductAmount" />

    <ImageView
        android:id="@+id/ivEditProduct"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ivDeleteProduct"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/ivDeleteProduct"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />

    <TextView
        android:id="@+id/tvProductAmount"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Cnt."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivEditProduct"
        app:layout_constraintEnd_toStartOf="@+id/ivPlusOneProduct"
        app:layout_constraintTop_toTopOf="@+id/ivEditProduct"
        app:layout_constraintVertical_bias="0.444"
        android:background="@color/lightGray"/>

    <ImageView
        android:id="@+id/ivPlusOneProduct"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivEditProduct"
        app:layout_constraintEnd_toStartOf="@+id/ivEditProduct"
        app:layout_constraintTop_toTopOf="@+id/ivEditProduct"
        app:srcCompat="@drawable/ic_add" />

    <ImageView
        android:id="@+id/ivMinusOneProduct"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivEditProduct"
        app:layout_constraintEnd_toStartOf="@+id/tvProductAmount"
        app:layout_constraintTop_toTopOf="@+id/ivEditProduct"
        app:srcCompat="@drawable/ic_remove" />


</androidx.constraintlayout.widget.ConstraintLayout>