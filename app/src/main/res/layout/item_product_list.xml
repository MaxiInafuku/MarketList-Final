<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clProductListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvProductListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Producto"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/cbProductListPruchased"
        app:layout_constraintEnd_toStartOf="@+id/tvProdutListAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cbProductListPruchased" />

    <TextView
        android:id="@+id/tvProdutListAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Cnt."
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/cbProductListPruchased"
        app:layout_constraintEnd_toStartOf="@+id/cbProductListPruchased"
        app:layout_constraintTop_toTopOf="@+id/cbProductListPruchased" />

    <CheckBox
        android:id="@+id/cbProductListPruchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>